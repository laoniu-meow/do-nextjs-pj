# Environment Configuration Template
# Copy this file to .env.development and fill in your values

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_LOGOS_DIR="assets/logo"
UPLOAD_MEDIA_DIR="assets/media"
UPLOAD_DOCS_DIR="assets/docs"

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
POSTGRES_CONTAINER_NAME="company-webapp"
POSTGRES_DB="company-webapp"
POSTGRES_USER="your_username"
POSTGRES_PASSWORD="your_password"
POSTGRES_PORT="5432"
POSTGRES_HOST_AUTH_METHOD="trust"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters"

# Email Configuration
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@example.com"
EMAIL_SERVER_PASSWORD="your-email-password"

# JWT Configuration
JWT_SECRET="your-jwt-secret-here-minimum-32-characters"
JWT_EXPIRES_IN="7d"

# Email Encryption
EMAIL_ENCRYPTION_KEY="your-64-character-encryption-key-here"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Optional
NODE_ENV="development"
DEBUG="true"
BCRYPT_ROUNDS="12"
