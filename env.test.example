# Test Environment Configuration Example
# Copy this file to .env.test and fill in your test values
# DO NOT use production secrets in this file

# Database Configuration for Testing
DATABASE_URL="postgresql://test:test@localhost:5432/test"
POSTGRES_CONTAINER_NAME="test_db"
POSTGRES_DB="test"
POSTGRES_USER="test"
POSTGRES_PASSWORD="test"
POSTGRES_PORT="5432"
POSTGRES_HOST_AUTH_METHOD="trust"

# JWT Configuration for Testing
JWT_SECRET="test-jwt-secret-key-for-testing-purposes-only-minimum-32-characters"
JWT_EXPIRES_IN="1h"

# NextAuth Configuration for Testing
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="test-nextauth-secret-key-for-testing-purposes-only-minimum-32-characters"

# Admin User for Testing
ADMIN_EMAIL="admin@company.com"
ADMIN_PASSWORD="admin123"

# Sample Company for Testing
SAMPLE_COMPANY_WEBSITE="https://example.com"
SAMPLE_COMPANY_EMAIL="info@example.com"
SAMPLE_COMPANY_PHONE="+1-555-0123"
SAMPLE_COMPANY_ADDRESS="123 Sample Street, Sample City, SC 12345"

# Demo Credentials for Testing (Public)
NEXT_PUBLIC_DEMO_EMAIL="admin@company.com"
NEXT_PUBLIC_DEMO_PASSWORD="admin123"

# Other Test Configuration
NODE_ENV="test"
DEBUG="false"
LOG_LEVEL="error"
